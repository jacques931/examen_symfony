{% extends 'base.html.twig' %}

{% block title %}Nouveau Message{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Cr√©er un nouveau message</h2>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.destinataire) }}
                    {{ form_widget(form.destinataire) }}
                    {{ form_errors(form.destinataire) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.titre) }}
                    {{ form_widget(form.titre) }}
                    {{ form_errors(form.titre) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.contenu) }}
                    {{ form_widget(form.contenu) }}
                    {{ form_errors(form.contenu) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.renduses) }}
                    {{ form_widget(form.renduses) }}
                    {{ form_errors(form.renduses) }}
                </div>
                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_message_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Annuler
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane"></i> Envoyer
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
